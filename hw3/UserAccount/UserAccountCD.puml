+GetFromServer()
+SendToServer()
+Request action()
}

class "AccountManager" as am {
+Register()
+PasswordReset()
+ChangeStatus()
+JoinProject()
+LeaveProject()
+UpdateProfile()
}

class "UserAccount" as ua {
-DisplayName
-Username
-IsHost
-Bio
-Photo
-FirstName
-LastName
-Email
-IsOnline
-Password
}


class "FriendsManager" as fm {
+FriendRequest()
+CheckOnline()
+FriendAccept()
+InviteToChat()
}

class "FriendsList" as fl {
-FriendCount
-FriendArray
}


