	class "ChatManager" as sqs_ch_m{
		+chatroomList
		+createRoom(name)
		}
		class "ChatRoom" as sqs_ch {
			+id
			+addMessage(msg)
			+getMessages()
			+sendMessagesToClients()
			}
			class "ChatMessage" as sqs_ch_mes{
				+fromID
				+text
				+timestamp
				}


sq -right- sqs : <<TCP>>

	sqs *-- sqs_pr_m 
		sqs_pr_m "1" -- "*" sqs_pr : Project List
			sqs_pr "1" -- "*" sqs_fi : File List
	sqs *-- sqs_ua_m 
		sqs_ua_m "1" -- "*" sqs_ua : User Account List
	sqs *-- sqs_ch_m 
		sqs_ch_m "1" -- "*" sqs_ch : Chat Room List 
			sqs_ch "1" -- "*" sqs_ch_mes : Message Log
